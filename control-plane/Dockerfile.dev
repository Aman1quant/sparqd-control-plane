# Lightweight Node image
FROM node:22-slim

# Install pnpm globally
RUN npm install -g pnpm

# Set working directory
WORKDIR /app

# Install dependencies (optional: mount node_modules to cache)
VOLUME /app/node_modules

# Expose Express default port
EXPOSE 3000

# Default command (can override with other scripts)
CMD ["pnpm", "dev:api"]
